<div class="split-banner-section">
  <div class="split-banner-container">
    {%- for block in section.blocks -%}
      <div class="split-banner-item" {{ block.shopify_attributes }}>
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="split-banner-link"></a>
        {%- endif -%}

        <div class="split-banner-image-wrapper">
          {%- if block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 1500
              | image_tag:
                loading: 'lazy',
                width: block.settings.image.width,
                height: block.settings.image.height,
                class: 'split-banner-image',
                sizes: '(min-width: 750px) 50vw, 100vw'
            }}
          {%- else -%}
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          <div class="split-banner-overlay"></div>
        </div>

        <div class="split-banner-content">
          {%- if block.settings.heading != blank -%}
            <h3 class="split-banner-heading">{{ block.settings.heading }}</h3>
          {%- endif -%}
          {%- if block.settings.button_label != blank -%}
            <span class="button split-banner-button">{{ block.settings.button_label }}</span>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<style>
  .split-banner-section {
    width: 100%;
    overflow: hidden;
  }

  .split-banner-container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
  }

  .split-banner-item {
    position: relative;
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .split-banner-item {
    width: 50%;
    min-height: 400px;
    /* Ensure images don't crop too aggressively - let height grow if needed, or fix ratio */
    aspect-ratio: 3/4;
  }

  /* Force side-by-side on mobile too */
  .split-banner-item {
    width: 50%;
  }

  /* Adjust image behavior */
  .split-banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.6s ease;
  }

  .split-banner-link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .split-banner-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .split-banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.6s ease;
  }

  .split-banner-item:hover .split-banner-image {
    transform: scale(1.05);
  }

  .split-banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    transition: background 0.3s ease;
  }

  .split-banner-item:hover .split-banner-overlay {
    background: rgba(0, 0, 0, 0.3);
  }

  .split-banner-content {
    position: relative;
    z-index: 1;
    padding: 2rem;
    color: #fff;
    pointer-events: none; /* Let clicks pass to the link */
  }

  .split-banner-heading {
    font-size: 2.5rem;
    margin: 0 0 1.5rem;
    color: #fff;
    font-weight: 500;
    line-height: 1.2;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .split-banner-button {
    background: #fff;
    color: #000;
    border: none;
    padding: 10px 24px;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }

  /* Inherit button styles if needed, or force override */
  .button.split-banner-button {
    min-height: auto;
  }
</style>

{% schema %}
{
  "name": "Split Banner",
  "tag": "section",
  "class": "section",
  "max_blocks": 2,
  "settings": [],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Banner Heading"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Split Banner",
      "blocks": [
        {
          "type": "banner"
        },
        {
          "type": "banner"
        }
      ]
    }
  ]
}
{% endschema %}
