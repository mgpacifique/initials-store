<div class="hero-carousel-container">
  <div class="hero-left-content">
    <div class="hero-text-wrapper">
      <h2 class="hero-title">{{ section.settings.heading }}</h2>
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="button hero-button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>

    <div class="carousel-controls">
      <button class="carousel-btn prev-btn" aria-label="Previous">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="carousel-btn next-btn" aria-label="Next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>

  <div class="hero-right-visual">
    <div class="carousel-track">
      <img
        src="{{ 'carousel-1.jpg' | asset_url }}"
        class="carousel-image active"
        alt="Carousel 1"
        width="3000"
        height="1700"
      >
      <img src="{{ 'carousel-2.jpg' | asset_url }}" class="carousel-image" alt="Carousel 2" width="3000" height="1700">
      <img
        src="{{ '581408367_18199319080321020_6728319841465156017_n.jpg' | asset_url }}"
        class="carousel-image"
        alt="Carousel 3"
        width="3000"
        height="1700"
      >
      <img src="{{ 'carousel-4.jpg' | asset_url }}" class="carousel-image" alt="Carousel 4" width="3000" height="1700">
    </div>
    <div class="vignette-overlay"></div>
  </div>
</div>

<style>
  .hero-carousel-container {
    display: flex;
    flex-direction: column;
    background-color: #000;
    color: #fff;
    min-height: 100vh;
    overflow: hidden;
    position: relative;
  }

  @media (min-width: 750px) {
    .hero-carousel-container {
      flex-direction: row;
    }
  }

  /* Left Side */
  /* Left Side */
  .hero-left-content {
    /* Mobile: Overlay on top of images */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    text-align: center;
    padding: 2rem 2rem 8rem 2rem;
    z-index: 3;
    background: transparent;
  }

  @media (min-width: 750px) {
    .hero-left-content {
      /* Desktop: Split screen */
      position: relative;
      flex: 0 0 30%;
      height: auto;
      width: auto; /* Reset width to respect flex */
      background: #000;
      align-items: flex-start;
      text-align: left;
      padding: 4rem;
    }
  }

  .hero-title {
    font-size: 2rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #fff;
    font-family: var(--font-heading-family);
  }

  @media (min-width: 750px) {
    .hero-title {
      font-size: 3rem;
      margin-bottom: 2rem;
    }
  }

  .hero-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 4px;
    transition: opacity 0.3s;
  }

  .hero-button:hover {
    opacity: 0.8;
  }

  /* Right Side */
  /* Right Side */
  .hero-right-visual {
    /* Mobile: Full background */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 750px) {
    .hero-right-visual {
      position: relative;
      flex: 1;
      width: auto; /* Reset width */
      height: auto; /* Reset height */
    }
  }

  .carousel-track {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .carousel-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Changed to cover to 'fill the whole right side' */
    object-position: center;
    position: absolute;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }

  .carousel-image.active {
    opacity: 1;
    z-index: 1;
  }

  /* Vignette Overlay */
  /* Vignette Overlay */
  .vignette-overlay {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.4); /* Mobile: Simple dimming overlay */
    z-index: 2; /* Above images, below text */
    pointer-events: none;
  }

  @media (min-width: 750px) {
    .vignette-overlay {
      width: 60%; /* Desktop: Gradient blend */
      background: linear-gradient(to right, #000 0%, rgba(0, 0, 0, 0.8) 20%, transparent 100%);
    }
  }

  /* Controls */
  .carousel-controls {
    display: flex;
    gap: 1rem;
    margin-top: 3rem;
  }

  .carousel-btn {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
  }

  .carousel-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('.carousel-track');
    const images = track.querySelectorAll('.carousel-image');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');
    let currentIndex = 0;
    const intervalTime = 5000;
    let autoPlayInterval;

    function showImage(index) {
      images.forEach((img, i) => {
        img.classList.remove('active');
        if (i === index) {
          img.classList.add('active');
        }
      });
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % images.length;
      showImage(currentIndex);
    }

    function prevSlide() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      showImage(currentIndex);
    }

    nextBtn.addEventListener('click', () => {
      nextSlide();
      resetInterval();
    });

    prevBtn.addEventListener('click', () => {
      prevSlide();
      resetInterval();
    });

    function startInterval() {
      autoPlayInterval = setInterval(nextSlide, intervalTime);
    }

    function resetInterval() {
      clearInterval(autoPlayInterval);
      startInterval();
    }

    startInterval();
  });
</script>

